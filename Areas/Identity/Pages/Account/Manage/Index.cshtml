@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="text-center">@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" enctype="multipart/form-data" />
<div class="row row-cols-1 row-cols-md-2">
    <div class="col-12 col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-2">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group p-2">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div>
                <div class="p-2">
                    <label asp-for="Input.Image"></label>
                    <input type="file" asp-for="Input.Image" class="form-control" accept=".jpg,.png,.gif,jpeg" />
                    <span asp-validation-for="Input.Image"></span>
                </div>
            </div>
            <div class="p-2">
                <button id="update-profile-button" type="submit" class="btn btn-sm kustom-button mt-2 note-btn-block">Save</button>
            </div>
        </form>
    </div>
    <div class="col-12 col-md-6 order-first order-md-last d-flex justify-content-center align-items-center m-2 m-md-0">
        <img src="@Model.CurrentImage" class="image-fluid rounded-circle" width="200" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}